<UserControl x:Class="PackageManager.Views.NavigationPanel" x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:CustomControlLibrary.CustomControl.Controls;assembly=CustomControlLibrary"
             mc:Ignorable="d">
    <!-- 左侧导航样式：浅灰背景、圆角、与示例图一致的留白 -->
    <Border BorderBrush="#1F000000" BorderThickness="1" Padding="12" Background="#08000000" CornerRadius="6">
        <ListBox x:Name="ActionListBox"
                 ItemsSource="{Binding ElementName=root, Path=ActionItems}"
                 SelectionChanged="ActionListBox_SelectionChanged"
                 BorderThickness="0"
                 MinWidth="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,4" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- 左侧图标（MDL2字体图标） -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Glyph}"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Foreground="#66000000" />
                        <!-- 文本 -->
                        <controls:CTextBlock Grid.Column="1"
                                             Text="{Binding Name}"
                                             VerticalAlignment="Center"
                                             TextAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Padding" Value="10,8" />
                    <Setter Property="MinHeight" Value="50" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Grid>
                                    <Border x:Name="LeftBar" Width="4" HorizontalAlignment="Left" Background="#2B7FFF" Visibility="Collapsed" />
                                    <Border x:Name="Bd" Background="Transparent" CornerRadius="6">
                                        <ContentPresenter Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#102B7FFF" />
                                        <Setter TargetName="LeftBar" Property="Visibility" Value="Visible" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#08000000" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Border>
</UserControl>
