<UserControl x:Class="PackageManager.Views.Controls.WorkItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:PackageManager.Converters"
             mc:Ignorable="d" d:DesignHeight="160" d:DesignWidth="320">
    <UserControl.Resources>
        <conv:TypeIsDefectToVisibilityConverter x:Key="TypeIsDefectVis" />
        <conv:SeverityTextConverter x:Key="SeverityTextConverter" />
        <conv:SeverityColorConverter x:Key="SeverityColorConverter" />
    </UserControl.Resources>
    <Border Padding="14" Margin="12" CornerRadius="12" BorderThickness="1" HorizontalAlignment="Stretch" BorderBrush="#E5E7EB" Background="#FFFFFF" Opacity="0">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="#FFFFFF" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding StateCategory}" Value="è¿›è¡Œä¸­">
                        <Setter Property="Background" Value="#FFFBEB" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StateCategory}" Value="å·²å®Œæˆ">
                        <Setter Property="Background" Value="#ECFDF5" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding StateCategory}" Value="å·²å…³é—­">
                        <Setter Property="Background" Value="#F3F4F6" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Border.Effect>
            <DropShadowEffect x:Name="shadow" Color="#33000000" ShadowDepth="1" BlurRadius="4" />
        </Border.Effect>
        <Border.RenderTransform>
            <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1" />
        </Border.RenderTransform>
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.18" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.12" />
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.12" />
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" To="8" Duration="0:0:0.12" />
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)" To="3" Duration="0:0:0.12" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.12" />
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.12" />
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" To="4" Duration="0:0:0.12" />
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)" To="1" Duration="0:0:0.12" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0">
                <Rectangle.Style>
                    <Style TargetType="Rectangle">
                        <Setter Property="Fill" Value="#D1D5DB" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StateCategory}" Value="è¿›è¡Œä¸­">
                                <Setter Property="Fill" Value="#F59E0B" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StateCategory}" Value="å·²å®Œæˆ">
                                <Setter Property="Fill" Value="#10B981" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StateCategory}" Value="å·²å…³é—­">
                                <Setter Property="Fill" Value="#9CA3AF" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StateCategory}" Value="å¯æµ‹è¯•">
                                <Setter Property="Fill" Value="#60A5FA" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StateCategory}" Value="æµ‹è¯•ä¸­">
                                <Setter Property="Fill" Value="#3B82F6" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StateCategory}" Value="æœªå¼€å§‹">
                                <Setter Property="Fill" Value="#D1D5DB" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>
            </Rectangle>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Identifier}" Foreground="#6B7280" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <Image Grid.Column="1" Source="{Binding AssigneeAvatar}" Width="22" Height="22" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AssigneeAvatar}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AssigneeAvatar.Length}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
                <TextBlock Grid.Row="1" Text="{Binding Title}" TextWrapping="Wrap" FontWeight="Bold" FontSize="14" Margin="0,6,0,0" />
                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border Background="#E0F2FE" BorderBrush="#93C5FD" BorderThickness="1" CornerRadius="999" Padding="8,2" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Status}" Foreground="#1D4ED8" />
                    </Border>
                    <Border Grid.Column="1" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="8,0,0,0"
                            Visibility="{Binding Type, Converter={StaticResource TypeIsDefectVis}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Severity}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Severity.Length}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0" Fill="{Binding Severity, Converter={StaticResource SeverityColorConverter}}" />
                            <TextBlock Text="{Binding Severity, Converter={StaticResource SeverityTextConverter}}" Foreground="#374151" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Background="#E5E7EB" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="8,0,0,0" HorizontalAlignment="Right">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="#E5E7EB" />
                                <Setter Property="BorderBrush" Value="#D1D5DB" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Priority}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority.Length}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="æœ€é«˜">
                                        <Setter Property="Background" Value="#FEE2E2" />
                                        <Setter Property="BorderBrush" Value="#FCA5A5" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="è¾ƒé«˜">
                                        <Setter Property="Background" Value="#FFEDD5" />
                                        <Setter Property="BorderBrush" Value="#FDBA74" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="æ™®é€š">
                                        <Setter Property="Background" Value="#FEF3C7" />
                                        <Setter Property="BorderBrush" Value="#FDE68A" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="è¾ƒä½Ž">
                                        <Setter Property="Background" Value="#E0F2FE" />
                                        <Setter Property="BorderBrush" Value="#93C5FD" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="æœ€ä½Ž">
                                        <Setter Property="Background" Value="#DCFCE7" />
                                        <Setter Property="BorderBrush" Value="#86EFAC" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Priority}" Foreground="#111827" />
                    </Border>
                </Grid>
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                    <Border Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“…" Margin="0,0,6,0" />
                            <TextBlock Text="{Binding StartAt, StringFormat={}{0:MM\\æœˆdd\\æ—¥}}" Foreground="#6B7280" />
                        </StackPanel>
                    </Border>
                    <Border Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“…" Margin="0,0,6,0" />
                            <TextBlock Text="{Binding EndAt, StringFormat={}{0:MM\\æœˆdd\\æ—¥}}" Foreground="#6B7280" />
                        </StackPanel>
                    </Border>
                    <Border Background="#EEF2FF" BorderBrush="#E0E7FF" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="12,0,0,0">
                        <TextBlock Text="{Binding StoryPoints, StringFormat={}{0}}" Foreground="#3730A3" />
                    </Border>
                    <Border Background="#E5E7EB" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="12,0,0,0">
                        <TextBlock Text="{Binding CommentCount}" Foreground="#374151" />
                    </Border>
                </StackPanel>
                <ItemsControl Grid.Row="4" ItemsSource="{Binding Tags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFE4E6" BorderBrush="#FDA4AF" BorderThickness="1" CornerRadius="999" Padding="8,2" Margin="0,8,8,0">
                                <TextBlock Text="{Binding}" Foreground="#9D174D" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
