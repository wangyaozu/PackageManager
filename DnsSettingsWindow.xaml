<Window x:Class="PackageManager.DnsSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:C="clr-namespace:CustomControlLibrary.CustomControl.Controls.DataGrid;assembly=CustomControlLibrary"
        Title="DNS 设置" Height="520" Width="1750" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <C:CDataGrid x:Name="AdaptersGrid" Grid.Row="0"
                     TextAlignment="Left"
                     EnableAutoTemplateSelection="True"
                     ItemsSource="{Binding AdapterItems}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="关闭" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
