<Window x:Class="PackageManager.PackageConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:C="clr-namespace:CustomControlLibrary.CustomControl.Controls.DataGrid;assembly=CustomControlLibrary"
        xmlns:button="clr-namespace:CustomControlLibrary.CustomControl.Controls.Button;assembly=CustomControlLibrary"
        mc:Ignorable="d"
        Title="包配置" Height="600" Width="1300" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="包配置（内置不可修改，自定义可编辑）" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,0,0,0">
                <button:CButton Content="新增" Width="80" Click="AddButton_Click"/>
                <button:CButton Content="保存" Width="80" Margin="8,0,0,0" Click="SaveButton_Click"/>
                <button:CButton Content="关闭" Width="80" Margin="8,0,0,0" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>

        <C:CDataGrid x:Name="PackageGrid" Grid.Row="1"
                     TextAlignment="Left"
                     EnableAutoTemplateSelection="True"
                     ItemsSource="{Binding AllItems}"
                     SelectedItem="{Binding SelectedItem}"/>

        
    </Grid>
</Window>
