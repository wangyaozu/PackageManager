<Window x:Class="PackageManager.LocalPathSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:C="clr-namespace:CustomControlLibrary.CustomControl.Controls.DataGrid;assembly=CustomControlLibrary"
        xmlns:button="clr-namespace:CustomControlLibrary.CustomControl.Controls.Button;assembly=CustomControlLibrary"
        Title="本地包路径设置" Height="540" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="为每个产品设置本地包路径" FontSize="18" FontWeight="Bold"/>

        <C:CDataGrid x:Name="LocalPathGrid" Grid.Row="1"
                     TextAlignment="Left"
                     EnableAutoTemplateSelection="True"
                     ItemsSource="{Binding LocalPathItems}"
                     Margin="0,12,0,12"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <button:CButton Content="保存" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <button:CButton Content="取消" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>