<Window x:Class="PackageManager.DnsEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CustomControlLibrary.CustomControl.Controls;assembly=CustomControlLibrary"
        xmlns:button="clr-namespace:CustomControlLibrary.CustomControl.Controls.Button;assembly=CustomControlLibrary"
        xmlns:dataGrid="clr-namespace:CustomControlLibrary.CustomControl.Controls.DataGrid;assembly=CustomControlLibrary"
        Title="编辑DNS" Height="600" Width="750" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <controls:CTextBlock Grid.Column="0" Text="网卡:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <controls:CTextBlock Grid.Column="1" x:Name="AdapterNameText" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <controls:CTextBlock Grid.Column="0" Text="DNS (IPv4):" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <controls:CTextBox x:Name="DnsSeg1" Width="60" Height="32" HorizontalAlignment="Left" VerticalAlignment="Center" MaxLength="3"/>
                <controls:CTextBlock Text="." Margin="6,0" VerticalAlignment="Center"/>
                <controls:CTextBox x:Name="DnsSeg2" Width="60" Height="32" HorizontalAlignment="Left" VerticalAlignment="Center" MaxLength="3"/>
                <controls:CTextBlock Text="." Margin="6,0" VerticalAlignment="Center"/>
                <controls:CTextBox x:Name="DnsSeg3" Width="60" Height="32" HorizontalAlignment="Left" VerticalAlignment="Center" MaxLength="3"/>
                <controls:CTextBlock Text="." Margin="6,0" VerticalAlignment="Center"/>
                <controls:CTextBox x:Name="DnsSeg4" Width="60" Height="32" HorizontalAlignment="Left" VerticalAlignment="Center" MaxLength="3"/>
                <button:CButton x:Name="AddOrSaveButton" Content="添加地址" Width="100" Margin="12,0,0,0" Click="AddOrSaveButton_Click"/>
            </StackPanel>
        </Grid>

        <dataGrid:CDataGrid x:Name="DnsListGrid" Grid.Row="2"
                     TextAlignment="Left"
                     EnableAutoTemplateSelection="True"
                     ItemsSource="{Binding DnsItems}"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <button:CButton Content="确定" Width="90" Margin="0,0,8,0" Click="OkButton_Click"/>
            <button:CButton Content="取消" Width="90" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
